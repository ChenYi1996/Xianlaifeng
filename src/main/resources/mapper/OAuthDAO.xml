<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.xianlaifeng.DAO.OAuthDAO">

    <sql id='TABLE_NAME'>xlf_OAuth</sql>

    <select id="ifExist" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT oau_id FROM <include refid="TABLE_NAME" />
        WHERE oau_method = #{oau_method}
        AND oau_id = #{oau_id}
    </select>

    <select id="insertOAuth"  parameterType="com.xianlaifeng.model.XLF_OAuth">
        INSERT INTO <include refid="TABLE_NAME" /> (oau_method,oau_id)
        values (#{oau_method}, #{oau_id} )
    </select>


</mapper>